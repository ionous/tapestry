{
  "Tapestry:": [
    {
      "Event:action:args common:": [
        "examine",
        "examining",
        {
          "CommonAction:": "thing"
        }
      ]
    },
    {
      "Pattern:provides:rules:": [
        "examining",
        [
          {
            "Text:kind:initially:": [
              "actor",
              "actor",
              {
                "Get:from:": [
                  "pawn",
                  {
                    "VarFields:": "agent"
                  }
                ]
              }
            ]
          }
        ],
        [
          {
            "PatternRule:does:": [
              {
                "IsPlayer obj:": "@actor"
              },
              [
                {
                  "If:from:and:does:else:": [
                    "resp",
                    {
                      "FromTxt:": {
                        "CanReach actor:action:noun:requiresLight:": [
                          "@actor",
                          {
                            "FromTxt:": "examining"
                          },
                          "@noun",
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    },
                    {
                      "Not:": {
                        "Is empty:": "@resp"
                      }
                    },
                    [
                      {
                        "Say:": "@resp"
                      }
                    ],
                    {
                      "ElseDo does:": [
                        {
                          "If:from:and:does:else:": [
                            "resp",
                            {
                              "FromTxt:": {
                                "CanUse actor:action:noun:": [
                                  "@actor",
                                  {
                                    "FromTxt:": "examining"
                                  },
                                  "@noun"
                                ]
                              }
                            },
                            {
                              "Not:": {
                                "Is empty:": "@resp"
                              }
                            },
                            [
                              {
                                "Say:": "@resp"
                              }
                            ],
                            {
                              "ElseDo does:": [
                                {
                                  "If:does:": [
                                    {
                                      "Send:event:": [
                                        {
                                          "Capture obj:": "@noun"
                                        },
                                        {
                                          "Examine actor:noun:": [
                                            "@actor",
                                            "@noun"
                                          ]
                                        }
                                      ]
                                    },
                                    [
                                      {
                                        "PrintDescription obj:": "@noun"
                                      }
                                    ]
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Pattern:requires:": [
        "Print description",
        [
          {
            "Text:kind:": [
              "obj",
              "object"
            ]
          }
        ]
      ]
    },
    {
      "Pattern:provides:rules:": [
        "Print description",
        [
          {
            "Text:initially:": [
              "description",
              {
                "Get:from:": [
                  "description",
                  {
                    "ObjFields:": "@obj"
                  }
                ]
              }
            ]
          }
        ],
        [
          {
            "PatternRule:does:": [
              {
                "Always": true
              },
              [
                {
                  "If:does:": [
                    {
                      "Not:": {
                        "PrintParticulars obj:": "@obj"
                      }
                    },
                    [
                      {
                        "Say:": {
                          "Response:text:": [
                            "unremarkable description",
                            {
                              "RenderTemplate:": "{We!|make_title_case!} see nothing special about {the: .obj}."
                            }
                          ]
                        }
                      }
                    ]
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "Not:": {
                  "Is empty:": "@description"
                }
              },
              [
                {
                  "Say:": "@description"
                },
                {
                  "PrintParticulars obj:": "@obj"
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Pattern:requires:returns:": [
        "Print particulars",
        [
          {
            "Text:kind:": [
              "obj",
              "object"
            ]
          }
        ],
        {
          "PatternResult:": {
            "Bool:": "success"
          }
        }
      ]
    },
    {
      "Pattern:rules:": [
        "Print particulars",
        [
          {
            "PatternRule:does:": [
              {
                "KindOf:is:": [
                  "@obj",
                  "containers"
                ]
              },
              [
                {
                  "If:does:else:": [
                    {
                      "PrintInlineStorage obj:": "@obj"
                    },
                    [
                      {
                        "Let:be:": [
                          "success",
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    ],
                    {
                      "ElseDo does:": [
                        {
                          "Comment:": "if the player isn't in the container."
                        },
                        {
                          "If:does:": [
                            {
                              "Cmp:is:txt:": [
                                "@obj",
                                "other_than",
                                {
                                  "ContainerOf obj:": {
                                    "FromTxt:": "player"
                                  }
                                }
                              ]
                            },
                            [
                              {
                                "Say:": {
                                  "Response:text:": [
                                    "empty container description",
                                    {
                                      "RenderTemplate:": "{The: .obj|capitalize!} {are: .obj} empty."
                                    }
                                  ]
                                }
                              },
                              {
                                "Let:be:": [
                                  "success",
                                  {
                                    "FromBool:": true
                                  }
                                ]
                              }
                            ]
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "KindOf:is:": [
                  "@obj",
                  "supporters"
                ]
              },
              [
                {
                  "If:does:": [
                    {
                      "PrintInlineStorage obj:": "@obj"
                    },
                    [
                      {
                        "Let:be:": [
                          "success",
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    ]
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Test:dependsOn:do:": [
        "examining test",
        "Kitchenette",
        [
          {
            "PrintDescription obj:": {
              "FromTxt:": "blender"
            }
          },
          {
            "Expect output:": "The blender is empty."
          },
          {
            "PrintDescription obj:": {
              "FromTxt:": "hat"
            }
          },
          {
            "Expect output:": "Your aunt's very own witches hat, a Halloween favorite."
          },
          {
            "PrintDescription obj:": {
              "FromTxt:": "mortar"
            }
          },
          {
            "Expect output:": "In the mortar is a pestle."
          },
          {
            "PrintDescription obj:": {
              "FromTxt:": "shelf"
            }
          },
          {
            "Expect output:": "On the shelf are a can of potato leek soup, a can of tomatoes, and a tin of deflating powder."
          },
          {
            "PrintDescription obj:": {
              "FromTxt:": "cabinet"
            }
          },
          {
            "Expect output:": [
              "An ancient teak wardrobe repurposed as a kitchen cupboard.",
              "In the cabinet are a book of matches, a bottle of descaling solution, a fish hook, and a rusty knife."
            ]
          },
          {
            "Relate:to:via:": [
              "blender",
              "self",
              "whereabouts"
            ]
          },
          {
            "PrintDescription obj:": {
              "FromTxt:": "blender"
            }
          },
          {
            "Expect output:": "You see nothing special about the blender."
          }
        ]
      ]
    }
  ]
}
