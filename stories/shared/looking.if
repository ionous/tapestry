          }
        ],
        {
          "Nothing": true
        },
        []
      ]
    },
    {
      "Extend pattern:withRules:": [
        "set everything unmentioned",
        [
          {
            "PatternRule:does:": [
              true,
              [
                {
                  "Set:from:": [
                    {
                      "Object:field:": [
                        "settings",
                        "mentions"
                      ]
                    },
                    {
                      "FromNumber:": 0
                    }
                  ]
                },
                {
                  "Repeating across:as:does:": [
                    {
                      "FromTextList:": {
                        "KindsOf:": "things"
                      }
                    },
                    "it",
                    [
                      {
                        "Set:from:": [
                          {
                            "Object:field:": [
                              "@it",
                              "not mentioned"
                            ]
                          },
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    ]
                  ]
                }
              ]
            ]
          }
        ]
      ]
    }
  ]
