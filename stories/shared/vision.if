                "Always",
                {
                  "Act:": [
                    {
                      "Determine:arguments:": [
                        "Print vantage",
                        {
                          "Args:": [
                            {
                              "Arg:from:": [
                                "where",
                                {
                                  "Get:from:": [
                                    "pawn",
                                    {
                                      "ObjFields:": "player"
                                    }
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
