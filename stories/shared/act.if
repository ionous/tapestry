{
  "Tapestry:": [
    {
      "Pattern:requires:returns:": [
        "state change",
        [
          {
            "Text:kind:": [
              "actor",
              "actor"
            ]
          },
          {
            "Text:kind:": [
              "noun",
              "thing"
            ]
          },
          {
            "Text:": "trait"
          },
          {
            "Text:": "guard"
          },
          {
            "Text:": "change"
          }
        ],
        {
          "PatternResult:": {
            "Bool:": "success"
          }
        }
      ]
    },
    {
      "--": ""
    },
    {
      "Listen kinds:handlers:": [
        "things",
        [
          {
            "With:event:rules:": [
              "while",
              "state change",
              [
                {
                  "PatternRule:does:": [
                    true,
                    [
                      {
                        "If:from:and:does:else:": [
                          "resp",
                          {
                            "FromText:": {
                              "StateChanging noun:trait:guard:change:": [
                                {
                                  "FromText:": {
                                    "Text value:": "@noun"
                                  }
                                },
                                {
                                  "FromText:": {
                                    "Text value:": "@trait"
                                  }
                                },
                                {
                                  "FromText:": {
                                    "Text value:": "@guard"
                                  }
                                },
                                {
                                  "FromText:": {
                                    "Text value:": "@change"
                                  }
                                }
                              ]
                            }
                          },
                          {
                            "Not:": {
                              "Is empty:": "@resp"
                            }
                          },
                          [
                            {
                              "Say:": "@resp"
                            },
                            {
                              "Set variable:from:": [
                                "@success",
                                {
                                  "FromBool:": false
                                }
                              ]
                            }
                          ],
                          {
                            "ElseDo does:": [
                              {
                                "Comment:": "nothing has stopped us, so lets change the state now."
                              },
                              {
                                "Set object:from:": [
                                  {
                                    "Object:field:": [
                                      "@noun",
                                      "@trait"
                                    ]
                                  },
                                  {
                                    "FromBool:": true
                                  }
                                ]
                              },
                              {
                                "Set variable:from:": [
                                  "@success",
                                  {
                                    "FromBool:": true
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Listen kinds:handlers:": [
        "things",
        [
          {
            "With:event:rules:": [
              "after",
              "state change",
              [
                {
                  "PatternRule:does:": [
                    true,
                    [
                      {
                        "Say:": {
                          "Response:text:": [
                            "something changed itself",
                            {
                              "RenderTemplate:": "{The: .noun|capitalize!} {are!} {.trait}."
                            }
                          ]
                        }
                      },
                      {
                        "Set variable:from:": [
                          "@success",
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    ]
                  ]
                },
                {
                  "PatternRule:does:": [
                    {
                      "IsPlayer obj:": {
                        "FromText:": "@actor"
                      }
                    },
                    [
                      {
                        "Say:": {
                          "Response:text:": [
                            "the player changed something",
                            {
                              "RenderTemplate:": "{We!|capitalize!} {.change} {the: .noun}."
                            }
                          ]
                        }
                      },
                      {
                        "Set variable:from:": [
                          "@success",
                          {
                            "FromBool:": true
                          }
                        ]
                      }
                    ]
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Pattern:requires:returns:": [
        "state changing",
        [
          {
            "Text:kind:": [
              "noun",
              "object"
            ]
          },
          {
            "--": "the trait we're changing to",
            "Text:": "trait"
          },
          {
            "--": "a trait which blocks the noun from changing",
            "Text:": "guard"
          },
          {
            "--": "some text which describes the action",
            "Text:": "change"
          }
        ],
        {
          "PatternResult:": {
            "Text:": "result"
          }
        }
      ]
    },
    {
      "Comment:": "Called from the state change event to attempt to change the state. "
    },
    {
      "Pattern:rules:": [
        "state changing",
        [
          {
            "PatternRule:does:": [
              {
                "Get object:": {
                  "Object:field:": [
                    "@noun",
                    "@trait"
                  ]
                }
              },
              [
                {
                  "Comment:": "can't change what is."
                },
                {
                  "Set variable:from:": [
                    "@result",
                    {
                      "FromText:": {
                        "Response:text:": [
                          "can't change what is",
                          {
                            "RenderTemplate:": "{They: .noun|capitalize!} {are!} already {.trait}."
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "AllTrue:": [
                  {
                    "Not:": {
                      "Is empty:": "@guard"
                    }
                  },
                  {
                    "Not:": {
                      "Get object:": {
                        "Object:field:": [
                          "@noun",
                          "@guard"
                        ]
                      }
                    }
                  }
                ]
              },
              [
                {
                  "Comment:": "can't change the unchangeable."
                },
                {
                  "Set variable:from:": [
                    "@result",
                    {
                      "FromText:": {
                        "Response:text:": [
                          "can't change the unchangeable",
                          {
                            "RenderTemplate:": "{They: .noun|capitalize!} {arent!} something {we!} can {.change}."
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          }
        ]
      ]
    }
  ]
}
