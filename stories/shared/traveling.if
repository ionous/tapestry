{
  "Tapestry:": [
    {
      "Event:action:args common:": [
        "travel",
        "traveling",
        {
          "--": [
            "Traveling takes one argument: the door to travel through.",
            "Future: allow directions too"
          ],
          "CommonAction:": "door"
        }
      ]
    },
    {
      "Pattern:provides:rules:": [
        "traveling",
        [
          {
            "--": "Get the actor from the agent.",
            "Text:kind:initially:": [
              "actor",
              "actor",
              {
                "Get variable:": {
                  "Variable:dot:": [
                    "agent",
                    [
                      {
                        "AtField:": "pawn"
                      }
                    ]
                  ]
                }
              }
            ]
          },
          {
            "--": "Get the destination from the door.",
            "Text:kind:initially:": [
              "destination",
              "room",
              {
                "Get variable:": {
                  "Variable:dot:": [
                    "noun",
                    [
                      {
                        "AtField:": "destination"
                      }
                    ]
                  ]
                }
              }
            ]
          }
        ],
        [
          {
            "PatternRule:does:": [
              {
                "IsPlayer obj:": {
                  "FromText:": {
                    "Text value:": "@actor"
                  }
                }
              },
              [
                {
                  "If:from:and:does:else:": [
                    "resp",
                    {
                      "FromText:": {
                        "CanReach actor:action:noun:": [
                          {
                            "FromText:": {
                              "Text value:": "@actor"
                            }
                          },
                          {
                            "FromText:": "traveling"
                          },
                          {
                            "FromText:": {
                              "Text value:": "@noun"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "Not:": {
                        "Is empty:": "@resp"
                      }
                    },
                    [
                      {
                        "Say:": "@resp"
                      }
                    ],
                    {
                      "ElseDo does:": [
                        {
                          "If:from:and:does:else:": [
                            "resp",
                            {
                              "FromText:": {
                                "CanUse actor:action:noun:otherNoun:": [
                                  {
                                    "FromText:": {
                                      "Text value:": "@actor"
                                    }
                                  },
                                  {
                                    "FromText:": "traveling"
                                  },
                                  {
                                    "FromText:": {
                                      "Text value:": "@noun"
                                    }
                                  },
                                  {
                                    "FromText:": {
                                      "Text value:": "@destination"
                                    }
                                  }
                                ]
                              }
                            },
                            {
                              "Not:": {
                                "Is empty:": "@resp"
                              }
                            },
                            [
                              {
                                "Say:": "@resp"
                              }
                            ],
                            {
                              "ElseDo does:": [
                                {
                                  "If:does:": [
                                    {
                                      "Send:event:": [
                                        {
                                          "Capture obj:": {
                                            "FromText:": {
                                              "Text value:": "@noun"
                                            }
                                          }
                                        },
                                        {
                                          "Travel actor:noun:": [
                                            {
                                              "FromText:": {
                                                "Text value:": "@actor"
                                              }
                                            },
                                            {
                                              "FromText:": {
                                                "Text value:": "@noun"
                                              }
                                            }
                                          ]
                                        }
                                      ]
                                    },
                                    [
                                      {
                                        "ReportTraveling actor:noun:": [
                                          {
                                            "FromText:": {
                                              "Text value:": "@actor"
                                            }
                                          },
                                          {
                                            "FromText:": {
                                              "Text value:": "@noun"
                                            }
                                          }
                                        ]
                                      }
                                    ]
                                  ]
                                }
                              ]
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Listen kinds:handlers:": [
        "things",
        [
          {
            "With:event:provides:rules:": [
              "while",
              "travel",
              [
                {
                  "--": "Get the destination from the door.",
                  "Text:kind:initially:": [
                    "destination",
                    "room",
                    {
                      "Get variable:": {
                        "Variable:dot:": [
                          "noun",
                          [
                            {
                              "AtField:": "destination"
                            }
                          ]
                        ]
                      }
                    }
                  ]
                }
              ],
              [
                {
                  "PatternRule:does:": [
                    true,
                    [
                      {
                        "If:from:and:does:else:": [
                          "error",
                          {
                            "FromText:": {
                              "MoveObject obj:dest:": [
                                {
                                  "FromText:": {
                                    "Text value:": "@actor"
                                  }
                                },
                                {
                                  "FromText:": {
                                    "Text value:": "@destination"
                                  }
                                }
                              ]
                            }
                          },
                          {
                            "Not:": {
                              "Is empty:": "@error"
                            }
                          },
                          [
                            {
                              "Say:": "@error"
                            },
                            {
                              "Set variable:from:": [
                                "@success",
                                {
                                  "FromBool:": false
                                }
                              ]
                            }
                          ],
                          {
                            "ElseDo does:": [
                              {
                                "Log:": {
                                  "FromText:": {
                                    "RenderTemplate:": "{The: .actor} {are: .actor} traveling to {the: .destination} via {the: .noun} ..."
                                  }
                                }
                              },
                              {
                                "Set variable:from:": [
                                  "@success",
                                  {
                                    "FromBool:": true
                                  }
                                ]
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Pattern:requires:": [
        "report traveling",
        [
          {
            "Text:kind:": [
              "actor",
              "actor"
            ]
          },
          {
            "Text:kind:": [
              "noun",
              "thing"
            ]
          }
        ]
      ]
    },
    {
      "Pattern:rules:": [
        "report traveling",
        [
          {
            "PatternRule:does:": [
              true,
              [
                {
                  "PrintVantage where:inDarkness:": [
                    {
                      "FromText:": {
                        "ParentOf obj:": {
                          "FromText:": {
                            "Text value:": "@actor"
                          }
                        }
                      }
                    },
                    {
                      "FromBool:": {
                        "Get variable:": {
                          "Variable:dot:": [
                            "actor",
                            [
                              {
                                "AtField:": "is in darkness"
                              }
                            ]
                          ]
                        }
                      }
                    }
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "Not:": {
                  "IsPlayer obj:": {
                    "FromText:": {
                      "Text value:": "@actor"
                    }
                  }
                }
              },
              [
                {
                  "Say:": {
                    "Response:text:": [
                      "someone else travels",
                      {
                        "RenderTemplate:": "{The: .actor|capitalize!} went through {the: .noun}."
                      }
                    ]
                  }
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Pattern:rules:": [
        "can use",
        [
          {
            "PatternRule:does:": [
              {
                "--": "can only travel to valid destinations",
                "AllTrue:": [
                  {
                    "Cmp:is:txt:": [
                      "@action",
                      "equal_to",
                      "traveling"
                    ]
                  },
                  {
                    "Not:": {
                      "KindOf:is:": [
                        "@other noun",
                        "rooms"
                      ]
                    }
                  }
                ]
              },
              [
                {
                  "Set variable:from:": [
                    "@response",
                    {
                      "FromText:": {
                        "Response:text:": [
                          "can only travel to a destination",
                          {
                            "RenderTemplate:": "{They: .noun|capitalize!} {dont:.noun} lead anywhere."
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "AllTrue:": [
                  {
                    "Cmp:is:txt:": [
                      "@action",
                      "equal_to",
                      "traveling"
                    ]
                  },
                  {
                    "Get object:": {
                      "Object:field:": [
                        "@noun",
                        "closed"
                      ]
                    }
                  }
                ]
              },
              [
                {
                  "Set variable:from:": [
                    "@response",
                    {
                      "FromText:": {
                        "Response:text:": [
                          "can't travel through closed doors",
                          {
                            "RenderTemplate:": "{They: .noun|capitalize!} seem{unless .noun.plural_named}s{end} to be closed."
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          },
          {
            "PatternRule:does:": [
              {
                "AllTrue:": [
                  {
                    "Cmp:is:txt:": [
                      "@action",
                      "equal_to",
                      "traveling"
                    ]
                  },
                  {
                    "Get object:": {
                      "Object:field:": [
                        "@noun",
                        "closed"
                      ]
                    }
                  },
                  {
                    "Get object:": {
                      "Object:field:": [
                        "@noun",
                        "locked"
                      ]
                    }
                  }
                ]
              },
              [
                {
                  "Set variable:from:": [
                    "@response",
                    {
                      "FromText:": {
                        "Response:text:": [
                          "can't travel through locked doors",
                          {
                            "RenderTemplate:": "{They: .noun|capitalize!} seem{unless .noun.plural_named}s{end} to be locked."
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          }
        ]
      ]
    }
  ]
}
