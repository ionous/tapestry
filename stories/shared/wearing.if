    },
    {
      "--": ""
    },
    {
      "--": "This isn't perfectly symmetrical with can only wear possessions, and that's okay.",
      "Rule for:named:do:": [
        "before state changing",
        "can only remove what's worn",
        {
          "If:do:": [
            {
              "AllTrue:": [
                {
                  "Cmp:is:txt:": [
                    "@trait",
                    "equal_to",
                    "not worn"
                  ]
                },
                {
                  "Cmp:is:txt:": [
                    "@actor",
                    "other_than",
                    {
                      "WearerOf obj:": {
                        "FromText:": "@noun"
                      }
                    }
                  ]
                }
              ]
            },
            [
              {
                "Say response:with:": [
                  "can only remove what's worn",
                  "{We:|capitalize!} aren't wearing {those:.noun}!"
                ]
              },
              {
                "Set:from:": [
                  {
                    "Variable:dot:": [
                      "event",
                      {
                        "AtField:": "cancel"
                      }
                    ]
                  },
                  {
                    "FromBool:": true
                  }
                ]
              }
            ]
          ]
        }
      ]
    }
