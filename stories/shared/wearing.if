                    },
                    [
                      {
                        "Print:": "@resp"
                      }
                    ],
                    {
                      "Finally do:": {
                        "StateChanging noun:actor:trait:guard:change:": [
                          {
                            "FromText:": "@noun"
                          },
                          {
                            "FromText:": "@actor"
                          },
                          {
                            "FromText:": "not worn"
                          },
                          {
                            "FromText:": "wearable"
                          },
                          {
                            "FromText:": "take off"
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          }
        ]
