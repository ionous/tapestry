{
  "Tapestry:": [
    {
      "Event:action:args common:": [
        "wear",
        "wearing",
        {
          "CommonAction:": "object"
        }
      ]
    },
    {
      "Extend pattern:provides:withRules:": [
        "wearing",
        [
          {
            "Text:kind:initially:": [
              "actor",
              "actor",
              {
                "Object:field:": [
                  "@agent",
                  "pawn"
                ]
              }
            ]
          }
        ],
        [
          {
            "PatternRule:do:": [
              {
                "IsPlayer obj:": {
                  "FromText:": "@actor"
                }
              },
              [
                {
                  "If:assuming:do:else:": [
                    {
                      "Not:": {
                        "Is empty:": "@resp"
                      }
                    },
                    {
                      "Arg:from:": [
                        "resp",
                        {
                          "FromText:": {
                            "CanHandle actor:action:noun:": [
                              {
                                "FromText:": "@actor"
                              },
                              {
                                "FromText:": "wearing"
                              },
                              {
                                "FromText:": "@noun"
                              }
                            ]
                          }
                        }
                      ]
                    },
                    [
                      {
                        "Print:": "@resp"
                      }
                    ],
                    {
                      "Finally do:": {
                        "StateChanging noun:actor:trait:guard:change:": [
                          {
                            "FromText:": "@noun"
                          },
                          {
                            "FromText:": "@actor"
                          },
                          {
                            "FromText:": "worn"
                          },
                          {
                            "FromText:": "wearable"
                          },
                          {
                            "FromText:": "put on"
                          }
                        ]
                      }
                    }
                  ]
                }
              ]
            ]
          }
        ]
      ]
    },
    {
      "--": ""
    },
    {
      "Event:action:args common:": [
        "remove",
        "removing",
        {
          "CommonAction:": "object"
        }
      ]
    },
    {
      "Extend pattern:provides:withRules:": [
        "removing",
        [
          {
            "Text:kind:initially:": [
              "actor",
              "actor",
              {
                "Object:field:": [
                  "@agent",
                  "pawn"
                ]
              }
            ]
          }
        ],
        [
          {
            "PatternRule:do:": [
              {
                "IsPlayer obj:": {
                  "FromText:": "@actor"
                }
              },
              [
                {
                  "If:assuming:do:else:": [
                    {
                      "Not:": {
                        "Is empty:": "@resp"
                      }
                    },
                    {
                      "Arg:from:": [
                        "resp",
                        {
                          "FromText:": {
                            "CanHandle actor:action:noun:": [
                              {
                                "FromText:": "@actor"
                              },
                              {
                                "FromText:": "removing"
                              },
                              {
                                "FromText:": "@noun"
                              }
                            ]
