                  "PatternRules:": [
                    {
                      "PatternRule:does:": [
                        {
                          "Always": true
                        },
                        [
                          {
                            "PrintInventory actor:": "@actor"
                          },
                          {
                            "Let:be:": [
                              "success",
                              {
                                "FromBool:": true
                              }
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        ]
      },
      {
        "--": ""
      },
      {
        "Pattern:requires:": [
          "print inventory",
          {
            "PatternParams:": [
              {
                "Text named:of:": [
                  "actor",
                  "actor"
                ]
              }
            ]
          }
        ]
      },
      {
        "Pattern:provides:rules:": [
          "print inventory",
          {
            "PatternLocals:": [
              {
                "TextList named:initially:": [
                  "kids",
                  {
                    "ChildrenOf obj:": "@actor"
                  }
                ]
              }
            ]
          },
          {
            "PatternRules:": [
              {
                "PatternRule:does:": [
                  {
                    "Always": true
                  },
                  [
                    {
                      "Say:": {
                        "Response:text:": [
                          "carrying nothing",
                          {
                            "RenderTemplate:": "{we:|capitalize!} {are:.actor} carrying nothing."
                          }
                        ]
                      }
                    }
                  ]
                ]
              },
              {
                "PatternRule:does:": [
                  {
                    "Cmp:is:num:": [
                      {
                        "Len:": "@kids"
                      },
                      {
                        "GreaterThan": true
                      },
                      0
                    ]
                  },
                  [
                    {
                      "Say:": {
                        "Response:text:": [
                          "carrying something",
                          {
                            "RenderTemplate:": "You are carrying:"
                          }
                        ]
                      }
                    },
                    {
                      "PrintBlocks objs:": "@kids"
                    }
                  ]
                ]
              }
            ]
          }
        ]
      }
    ]
  }
